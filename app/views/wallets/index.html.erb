<div class="flex items-center justify-between mb-8">
  <h1 class="text-3xl font-bold text-white">Wallets</h1>
  <%= link_to "Add Wallet", new_wallet_path, class: "bg-gray-700 hover:bg-gray-600 text-gray-300 px-4 py-2 rounded-lg text-sm font-medium transition" %>
</div>

<div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden">
  <table class="w-full">
    <thead>
      <tr class="border-b border-gray-800">
        <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Address</th>
        <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Network</th>
        <th class="text-center text-gray-400 text-xs uppercase tracking-wide p-4">Positions</th>
      </tr>
    </thead>
    <tbody>
      <% @wallets.each do |wallet| %>
        <tr class="border-b border-gray-800/50 hover:bg-gray-800/30">
          <td class="p-4 font-mono text-sm text-white">
            <span class="cursor-pointer hover:text-gray-300 transition inline-flex items-center gap-1" title="<%= wallet.address %>" onclick="navigator.clipboard.writeText('<%= wallet.address %>'); var icon=this.querySelector('.copy-icon'); icon.innerHTML='<path stroke-linecap=\'round\' stroke-linejoin=\'round\' d=\'M4.5 12.75l6 6 9-13.5\' />'; icon.classList.add('text-green-400'); setTimeout(function(){ icon.innerHTML='<path stroke-linecap=\'round\' stroke-linejoin=\'round\' d=\'M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75\' />'; icon.classList.remove('text-green-400'); }, 1500)">
              <%= wallet.address.to_s[0..5] %>&hellip;<%= wallet.address.to_s[-4..] %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 copy-icon text-gray-500">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75" />
              </svg>
            </span>
          </td>
          <td class="p-4">
            <span class="inline-block px-2 py-1 rounded-full text-xs font-medium bg-purple-900/50 text-purple-400 border border-purple-800 capitalize">
              <%= wallet.network.name %>
            </span>
          </td>
          <td class="p-4 text-center text-gray-300"><%= wallet.positions.select(&:active?).size %></td>
        </tr>
      <% end %>
      <% if @wallets.empty? %>
        <tr>
          <td colspan="3" class="p-8 text-center text-gray-500">No wallets added yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
