<div class="flex items-center justify-between mb-8">
  <h1 class="text-3xl font-bold text-white">Wallets</h1>
  <%= link_to "Add Wallet", new_wallet_path, class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-medium transition" %>
</div>

<div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden">
  <table class="w-full">
    <thead>
      <tr class="border-b border-gray-800">
        <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Address</th>
        <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Network</th>
        <th class="text-center text-gray-400 text-xs uppercase tracking-wide p-4">Positions</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @wallets.each do |wallet| %>
        <tr class="border-b border-gray-800/50 hover:bg-gray-800/30">
          <td class="p-4 font-mono text-sm text-white"><%= truncate(wallet.address, length: 20) %></td>
          <td class="p-4">
            <span class="inline-block px-2 py-1 rounded-full text-xs font-medium bg-purple-900/50 text-purple-400 border border-purple-800 capitalize">
              <%= wallet.network.name %>
            </span>
          </td>
          <td class="p-4 text-center text-gray-300"><%= wallet.positions.select(&:active?).size %></td>
          <td class="p-4 text-right space-x-2">
            <%= button_to "Sync", sync_now_wallet_path(wallet), method: :post, class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
            <%= button_to "Remove", wallet_path(wallet), method: :delete, class: "text-red-400 hover:text-red-300 text-sm font-medium", data: { turbo_confirm: "Remove this wallet?" } %>
          </td>
        </tr>
      <% end %>
      <% if @wallets.empty? %>
        <tr>
          <td colspan="4" class="p-8 text-center text-gray-500">No wallets added yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
