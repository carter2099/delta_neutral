<h1 class="text-3xl font-bold text-white mb-8">Add Wallet</h1>

<div class="bg-gray-900 rounded-xl border border-gray-800 p-6 max-w-lg">
  <%= form_with(model: @wallet, class: "space-y-6") do |f| %>
    <% if @wallet.errors.any? %>
      <div class="rounded-lg bg-red-900/50 border border-red-700 p-4 text-red-300 text-sm">
        <% @wallet.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= f.label :network_id, "Network", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.collection_select :network_id, @networks, :id, :name, { prompt: "Select network" }, class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :address, "Wallet Address", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.text_field :address, placeholder: "0x...", class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="flex items-center space-x-4">
      <%= f.submit "Add Wallet", class: "bg-blue-600 hover:bg-blue-500 text-white px-6 py-2 rounded-lg text-sm font-medium transition cursor-pointer" %>
      <%= link_to "Cancel", wallets_path, class: "text-gray-400 hover:text-white text-sm font-medium transition" %>
    </div>
  <% end %>
</div>
