<div class="flex items-center justify-between mb-8">
  <h1 class="text-3xl font-bold text-white">Hedges</h1>
  <%= link_to "New Hedge", new_hedge_path, class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-medium transition" %>
</div>

<div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden">
  <table class="w-full">
    <thead>
      <tr class="border-b border-gray-800">
        <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Position</th>
        <th class="text-center text-gray-400 text-xs uppercase tracking-wide p-4">Target</th>
        <th class="text-center text-gray-400 text-xs uppercase tracking-wide p-4">Tolerance</th>
        <th class="text-center text-gray-400 text-xs uppercase tracking-wide p-4">Status</th>
        <th class="text-center text-gray-400 text-xs uppercase tracking-wide p-4">Rebalances</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @hedges.each do |hedge| %>
        <tr class="border-b border-gray-800/50 hover:bg-gray-800/30">
          <td class="p-4">
            <%= link_to hedge_path(hedge), class: "text-blue-400 hover:text-blue-300 font-medium" do %>
              <%= hedge.position.asset0 %>/<%= hedge.position.asset1 %>
            <% end %>
          </td>
          <td class="p-4 text-center text-white"><%= number_to_percentage(hedge.target * 100, precision: 1) %></td>
          <td class="p-4 text-center text-gray-300"><%= number_to_percentage(hedge.tolerance * 100, precision: 1) %></td>
          <td class="p-4 text-center">
            <% if hedge.active? %>
              <span class="inline-block px-2 py-1 rounded-full text-xs font-medium bg-green-900/50 text-green-400 border border-green-800">Active</span>
            <% else %>
              <span class="inline-block px-2 py-1 rounded-full text-xs font-medium bg-gray-800 text-gray-500 border border-gray-700">Paused</span>
            <% end %>
          </td>
          <td class="p-4 text-center text-gray-300"><%= hedge.short_rebalances.count %></td>
          <td class="p-4 text-right space-x-2">
            <%= link_to "Edit", edit_hedge_path(hedge), class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
            <%= button_to "Sync", sync_now_hedge_path(hedge), method: :post, class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
          </td>
        </tr>
      <% end %>
      <% if @hedges.empty? %>
        <tr>
          <td colspan="6" class="p-8 text-center text-gray-500">No hedges configured. <%= link_to "Create one", new_hedge_path, class: "text-blue-400 hover:text-blue-300" %>.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
