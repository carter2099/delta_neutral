<div class="mb-4">
  <%= link_to position_path(@hedge.position), class: "text-gray-400 hover:text-white transition text-sm font-medium inline-flex items-center space-x-1" do %>
    <span>&larr;</span>
    <span>Back to Position</span>
  <% end %>
</div>

<div class="flex items-center justify-between mb-8">
  <div>
    <h1 class="text-3xl font-bold text-white inline-flex items-center gap-2">
      Hedge: <%= @hedge.position.asset0 %>/<%= @hedge.position.asset1 %>
      <%= link_to hedge_path(@hedge), class: "text-gray-400 hover:text-white transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.992 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182M21.015 4.356v4.992" />
        </svg>
      <% end %>
    </h1>
    <p class="text-gray-400 mt-1">
      Target: <%= number_to_percentage(@hedge.target * 100, precision: 1) %> &middot;
      Tolerance: <%= number_to_percentage(@hedge.tolerance * 100, precision: 1) %>
    </p>
  </div>
  <div class="flex items-center space-x-3">
    <%= button_to "Sync Now", sync_now_hedge_path(@hedge), method: :post, class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-medium transition" %>
    <%= link_to "Edit", edit_hedge_path(@hedge), class: "bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition" %>
    <%= button_to "Delete", hedge_path(@hedge), method: :delete, class: "bg-red-600 hover:bg-red-500 text-white px-4 py-2 rounded-lg text-sm font-medium transition", data: { turbo_confirm: "Delete this hedge?" } %>
  </div>
</div>

<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-10">
  <div class="bg-gray-900 rounded-xl border border-gray-800 p-4">
    <p class="text-gray-400 text-xs uppercase tracking-wide">Status</p>
    <p class="text-xl font-bold mt-1 <%= @hedge.active? ? 'text-green-400' : 'text-gray-500' %>">
      <%= @hedge.active? ? "Active" : "Paused" %>
    </p>
  </div>
  <div class="bg-gray-900 rounded-xl border border-gray-800 p-4">
    <p class="text-gray-400 text-xs uppercase tracking-wide">Target</p>
    <p class="text-xl font-bold text-white mt-1"><%= number_to_percentage(@hedge.target * 100, precision: 1) %></p>
  </div>
  <div class="bg-gray-900 rounded-xl border border-gray-800 p-4">
    <p class="text-gray-400 text-xs uppercase tracking-wide">Tolerance</p>
    <p class="text-xl font-bold text-white mt-1"><%= number_to_percentage(@hedge.tolerance * 100, precision: 1) %></p>
  </div>
  <div class="bg-gray-900 rounded-xl border border-gray-800 p-4">
    <p class="text-gray-400 text-xs uppercase tracking-wide">Total Rebalances</p>
    <p class="text-xl font-bold text-white mt-1"><%= @rebalances.size %></p>
  </div>
</div>

<h2 class="text-xl font-semibold text-white mb-4">Open Shorts</h2>
<div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden mb-10">
  <table class="w-full">
    <thead>
      <tr class="border-b border-gray-800">
        <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Coin</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Value</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Size</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">UPnL</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Entry</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Mark</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Liq Price</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Margin</th>
      </tr>
    </thead>
    <tbody>
      <% @shorts.each do |s| %>
        <tr class="border-b border-gray-800/50">
          <td class="p-4 text-white font-medium"><%= s[:asset] %></td>
          <td class="p-4 text-right text-gray-300">$<%= number_with_delimiter(number_with_precision(s[:position_value], precision: 2)) %></td>
          <td class="p-4 text-right text-gray-300"><%= number_with_precision(s[:size].abs, precision: 6) %></td>
          <td class="p-4 text-right <%= s[:unrealized_pnl] >= 0 ? 'text-green-400' : 'text-red-400' %>">
            $<%= number_with_precision(s[:unrealized_pnl], precision: 2) %>
          </td>
          <td class="p-4 text-right text-gray-300">$<%= number_with_delimiter(number_with_precision(s[:entry_price], precision: 2)) %></td>
          <td class="p-4 text-right text-gray-300">$<%= number_with_delimiter(number_with_precision(s[:mark_price], precision: 2)) %></td>
          <td class="p-4 text-right text-gray-300">
            <%= s[:liquidation_price] ? "$#{number_with_delimiter(number_with_precision(s[:liquidation_price], precision: 2))}" : "â€”" %>
          </td>
          <td class="p-4 text-right text-gray-300">$<%= number_with_delimiter(number_with_precision(s[:margin_used], precision: 2)) %></td>
        </tr>
      <% end %>
      <% if @shorts.empty? %>
        <tr>
          <td colspan="8" class="p-8 text-center text-gray-500">No open shorts.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h2 class="text-xl font-semibold text-white mb-4">Rebalance History</h2>
<div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden">
  <table class="w-full">
    <thead>
      <tr class="border-b border-gray-800">
        <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Asset</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Old Short</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">New Short</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Realized PnL</th>
        <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Time</th>
      </tr>
    </thead>
    <tbody>
      <% @rebalances.each do |r| %>
        <tr class="border-b border-gray-800/50">
          <td class="p-4 text-white font-medium"><%= r.asset %></td>
          <td class="p-4 text-right text-gray-300"><%= number_with_precision(r.old_short_size, precision: 6) %></td>
          <td class="p-4 text-right text-white"><%= number_with_precision(r.new_short_size, precision: 6) %></td>
          <td class="p-4 text-right <%= r.realized_pnl >= 0 ? 'text-green-400' : 'text-red-400' %>">
            $<%= number_with_precision(r.realized_pnl, precision: 2) %>
          </td>
          <td class="p-4 text-right text-gray-400 text-sm"><%= r.rebalanced_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>
      <% if @rebalances.empty? %>
        <tr>
          <td colspan="5" class="p-8 text-center text-gray-500">No rebalances yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
