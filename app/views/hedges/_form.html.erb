<div class="bg-gray-900 rounded-xl border border-gray-800 p-6 max-w-lg">
  <%= form_with(model: hedge, class: "space-y-6") do |f| %>
    <% if hedge.errors.any? %>
      <div class="rounded-lg bg-red-900/50 border border-red-700 p-4 text-red-300 text-sm">
        <% hedge.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <% if hedge.new_record? %>
      <div>
        <%= f.label :position_id, "Position", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <% if @selected_position %>
          <%= f.hidden_field :position_id, value: @selected_position.id %>
          <p class="text-white"><%= @selected_position.asset0 %>/<%= @selected_position.asset1 %></p>
        <% else %>
          <%= f.collection_select :position_id, unhedged_positions, :id, ->(p) { "#{p.asset0}/#{p.asset1} (#{p.dex.name})" }, { prompt: "Select position" }, class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= f.label :target, "Target Hedge %", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.number_field :target, step: 0.01, min: 0.01, max: 1.0, placeholder: "0.50", class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <p class="text-gray-500 text-xs mt-1">e.g. 0.50 = 50% of pool amount hedged</p>
    </div>

    <div>
      <%= f.label :tolerance, "Tolerance", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.number_field :tolerance, step: 0.01, min: 0.01, max: 1.0, placeholder: "0.05", class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <p class="text-gray-500 text-xs mt-1">e.g. 0.05 = rebalance when short deviates by more than 5% of pool amount</p>
    </div>

    <% unless hedge.new_record? %>
      <div>
        <%= f.label :active, class: "flex items-center space-x-3 cursor-pointer" do %>
          <%= f.check_box :active, class: "w-5 h-5 rounded bg-gray-800 border-gray-700 text-blue-600 focus:ring-blue-500" %>
          <span class="text-sm font-medium text-gray-300">Active</span>
        <% end %>
      </div>
    <% end %>

    <div class="flex items-center space-x-4">
      <%= f.submit hedge.new_record? ? "Create Hedge" : "Update Hedge", class: "bg-blue-600 hover:bg-blue-500 text-white px-6 py-2 rounded-lg text-sm font-medium transition cursor-pointer" %>
      <%= link_to "Cancel", hedges_path, class: "text-gray-400 hover:text-white text-sm font-medium transition" %>
    </div>
  <% end %>
</div>
