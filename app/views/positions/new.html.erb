<div class="page-header">
  <h1 class="page-title">Add Position</h1>
</div>

<div class="card" style="max-width: 600px;">
  <%= form_with model: @position, local: true do |f| %>
    <% if @position.errors.any? %>
      <div class="flash flash-alert" style="margin-bottom: 1rem;">
        <ul style="margin: 0; padding-left: 1rem;">
          <% @position.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :nft_id, "NFT Token ID", class: "form-label" %>
      <%= f.text_field :nft_id, class: "form-input", placeholder: "e.g., 123456", required: true %>
      <p class="form-hint">The token ID of your Uniswap V3 position NFT</p>
    </div>

    <div class="form-group">
      <%= f.label :network, class: "form-label" %>
      <%= f.select :network, [["Ethereum Mainnet", "ethereum"], ["Arbitrum", "arbitrum"]], {}, class: "form-select" %>
    </div>

    <div class="btn-group">
      <%= f.submit "Add Position", class: "btn btn-primary" %>
      <%= link_to "Cancel", positions_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
