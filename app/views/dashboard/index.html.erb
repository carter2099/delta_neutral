<h1 class="text-3xl font-bold text-white mb-8">Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
  <div class="bg-gray-900 rounded-xl border border-gray-800 p-6">
    <p class="text-gray-400 text-sm font-medium uppercase tracking-wide">Total Position Value</p>
    <p class="text-3xl font-bold text-white mt-2">$<%= number_with_delimiter(number_with_precision(@total_value, precision: 2)) %></p>
  </div>
  <div class="bg-gray-900 rounded-xl border border-gray-800 p-6">
    <p class="text-gray-400 text-sm font-medium uppercase tracking-wide">Active Positions</p>
    <p class="text-3xl font-bold text-white mt-2"><%= @positions.size %></p>
  </div>
  <div class="bg-gray-900 rounded-xl border border-gray-800 p-6">
    <p class="text-gray-400 text-sm font-medium uppercase tracking-wide">Active Hedges</p>
    <p class="text-3xl font-bold text-white mt-2"><%= @active_hedges %></p>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <div>
    <h2 class="text-xl font-semibold text-white mb-4">Positions</h2>
    <div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="border-b border-gray-800">
            <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Pair</th>
            <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Value</th>
            <th class="text-center text-gray-400 text-xs uppercase tracking-wide p-4">Hedged</th>
          </tr>
        </thead>
        <tbody>
          <% @positions.each do |position| %>
            <tr class="border-b border-gray-800/50 hover:bg-gray-800/30">
              <td class="p-4">
                <%= link_to position_path(position), class: "text-blue-400 hover:text-blue-300" do %>
                  <span class="font-medium text-white"><%= position.asset0 %>/<%= position.asset1 %></span>
                  <span class="text-gray-500 text-xs ml-2"><%= position.dex.name %></span>
                <% end %>
              </td>
              <td class="p-4 text-right text-white">$<%= number_with_precision(position.total_value_usd, precision: 2) %></td>
              <td class="p-4 text-center">
                <% if position.hedge&.active? %>
                  <span class="inline-block px-2 py-1 rounded-full text-xs font-medium bg-green-900/50 text-green-400 border border-green-800">Active</span>
                <% else %>
                  <span class="inline-block px-2 py-1 rounded-full text-xs font-medium bg-gray-800 text-gray-500 border border-gray-700">None</span>
                <% end %>
              </td>
            </tr>
          <% end %>
          <% if @positions.empty? %>
            <tr>
              <td colspan="3" class="p-8 text-center text-gray-500">No active positions. <%= link_to "Add a wallet", new_wallet_path, class: "text-blue-400 hover:text-blue-300" %> to get started.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div>
    <h2 class="text-xl font-semibold text-white mb-4">Recent Rebalances</h2>
    <div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="border-b border-gray-800">
            <th class="text-left text-gray-400 text-xs uppercase tracking-wide p-4">Asset</th>
            <th class="text-center text-gray-400 text-xs uppercase tracking-wide p-4"></th>
            <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Size Change</th>
            <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">PnL</th>
            <th class="text-right text-gray-400 text-xs uppercase tracking-wide p-4">Time</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_rebalances.each do |rebalance| %>
            <tr class="border-b border-gray-800/50 hover:bg-gray-800/30">
              <td class="p-4 font-medium text-white"><%= rebalance.asset %></td>
              <td class="p-4 text-center">
                <% if rebalance.status == ShortRebalance::STATUS_FAILED %>
                  <span class="inline-block w-2 h-2 rounded-full bg-red-500" title="Failed: <%= rebalance.message %>"></span>
                <% else %>
                  <span class="inline-block w-2 h-2 rounded-full bg-green-500"></span>
                <% end %>
              </td>
              <td class="p-4 text-right text-gray-300">
                <%= number_with_precision(rebalance.old_short_size, precision: 4) %> &rarr; <%= number_with_precision(rebalance.new_short_size, precision: 4) %>
              </td>
              <td class="p-4 text-right <%= rebalance.realized_pnl >= 0 ? 'text-green-400' : 'text-red-400' %>">
                $<%= number_with_precision(rebalance.realized_pnl, precision: 2) %>
              </td>
              <td class="p-4 text-right text-gray-400 text-sm"><%= time_ago_in_words(rebalance.rebalanced_at) %> ago</td>
            </tr>
          <% end %>
          <% if @recent_rebalances.empty? %>
            <tr>
              <td colspan="5" class="p-8 text-center text-gray-500">No rebalances yet.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
